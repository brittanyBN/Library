@page "{id:int?}"
@model Library.Pages.Books.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<div style="margin: 45px;">
<h1 style="margin-left: 105px;">Book Details
        <span class="visually-hidden">Book details</span>
</h1>

<div>
    <hr style="width: 450px;" />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Book.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Book.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Book.Genre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Book.Genre)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Book.Author)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Book.Author)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Book.Publisher)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Book.Publisher)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Book.PublicationDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Book.PublicationDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Book.Pages)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Book.Pages)
        </dd>
    </dl>
</div>
<div>
    <a class="btn" style="background-color: rgb(243, 239, 179); margin-top: 15px; margin-left: 168px;" asp-page="./Edit" asp-route-id="@Model.Book?.Id">Edit Book</a>
    </div>
    <div>
    <a class="btn" style="background-color: lightblue; margin-top: 15px; margin-left: 160px;" asp-page="Index">Back to List</a>
    </div>
</div>